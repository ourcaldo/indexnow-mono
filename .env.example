# ============================================
# INDEXNOW STUDIO - MONOREPO CONFIGURATION
# ============================================

# --------------------------------------------
# CORE APP
# --------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=IndexNow Studio
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_BASE_URL=https://your-domain.com
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_DASHBOARD_URL=https://dashboard.your-domain.com
NEXT_PUBLIC_BACKEND_URL=https://backend.your-domain.com
NEXT_PUBLIC_API_BASE_URL=https://api.your-domain.com
PORT=5000
ALLOWED_ORIGINS=https://your-domain.com,https://dashboard.your-domain.com

# --------------------------------------------
# SUPABASE (Shared)
# --------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_BUCKET_NAME=indexnow-public

# --------------------------------------------
# SECURITY
# --------------------------------------------
ENCRYPTION_KEY=your-32-character-encryption-key!
ENCRYPTION_MASTER_KEY=your-64-character-hex-master-key-here-replace-me-with-real-value!!
SYSTEM_API_KEY=your-system-api-key
JWT_SECRET=your-jwt-secret

# --------------------------------------------
# EMAIL (SMTP) - API Only
# --------------------------------------------
SMTP_HOST=smtp.your-mail-provider.com
SMTP_PORT=465
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your-smtp-password
SMTP_FROM_NAME=Your App Name
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_SECURE=false

# --------------------------------------------
# REDIS & BULLMQ - API Only
# --------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USER=
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

ENABLE_BULLMQ=false
WORKER_MODE=false
BULLMQ_CONCURRENCY_RANK_CHECK=5
BULLMQ_CONCURRENCY_EMAIL=10
BULLMQ_CONCURRENCY_PAYMENTS=3
BULLMQ_RATE_LIMIT_RANK_CHECK_MAX=28
BULLMQ_RATE_LIMIT_RANK_CHECK_DURATION=60000
BULLMQ_RATE_LIMIT_EMAIL_MAX=50
BULLMQ_RATE_LIMIT_EMAIL_DURATION=60000

# --------------------------------------------
# PADDLE PAYMENT GATEWAY
# --------------------------------------------
PADDLE_API_KEY=pdl_...
PADDLE_WEBHOOK_SECRET=ntfset_...
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=test_...
NEXT_PUBLIC_PADDLE_ENV=sandbox

# --------------------------------------------
# SE RANKING - API Only
# --------------------------------------------
SE_RANKING_API_KEY=your-seranking-api-key

# --------------------------------------------
# MONITORING & ANALYTICS
# --------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=https://...
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_TRACE_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_ERROR_RATE=1.0
NEXT_PUBLIC_SENTRY_DASHBOARD_URL=
SENTRY_AUTH_TOKEN= # (#V7 H-21) Required for Sentry source map uploads during build
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_GA4_MEASUREMENT_ID=
NEXT_PUBLIC_GTM_CONTAINER_ID=
NEXT_PUBLIC_CUSTOMERIO_SITE_ID=
NEXT_PUBLIC_ANALYTICS_DEBUG=true
LOG_LEVEL=info
