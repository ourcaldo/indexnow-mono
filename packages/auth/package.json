{
  "name": "@indexnow/auth",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@indexnow/database": "workspace:*",
    "@indexnow/shared": "workspace:*",
    "@indexnow/supabase-client": "workspace:*",
    "crypto-js": "^4.2.0",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@indexnow/eslint-config": "workspace:*",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.0.0",
    "eslint": "^9",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  }
}
