{
  "name": "@indexnow/shared",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.mjs",
      "require": "./dist/schema.js",
      "default": "./dist/schema.js"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./constants": {
      "types": "./src/constants/ApiEndpoints.ts",
      "import": "./dist/constants/ApiEndpoints.mjs",
      "require": "./dist/constants/ApiEndpoints.js",
      "default": "./dist/constants/ApiEndpoints.js"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js",
      "default": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.25.76",
    "events": "^3.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@indexnow/eslint-config": "workspace:*",
    "@types/react": "^19.2.10",
    "eslint": "^9",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
