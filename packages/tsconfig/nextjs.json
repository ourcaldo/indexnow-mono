{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "IndexNow Next.js App",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // (#V7 L-34) Paths below provide IDE resolution for `@indexnow/*` imports.
    // Each app's own tsconfig overrides these with its specific paths.
    // These exist so editors can resolve types before a build when extending this preset.
    "paths": {
      "@/*": ["./src/*"],
      "@indexnow/shared": ["../../packages/shared/src"],
      "@indexnow/database": ["../../packages/database/src"],
      "@indexnow/auth": ["../../packages/auth/src"],
      "@indexnow/services": ["../../packages/services/src"],
      "@indexnow/mail": ["../../packages/mail/src"],
      "@indexnow/ui": ["../../packages/ui/src"],
      "@indexnow/analytics": ["../../packages/analytics/src"],
      "@indexnow/supabase-client": ["../../packages/supabase-client/src"],
      "@indexnow/api-middleware": ["../../packages/api-middleware/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
