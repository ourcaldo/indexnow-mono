{
  "name": "@indexnow/ui",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./admin": "./src/components/admin/index.ts",
    "./auth": "./src/components/auth/index.ts",
    "./billing": "./src/components/billing/index.ts",
    "./checkout": "./src/components/checkout/index.ts",
    "./dashboard": "./src/components/dashboard/index.ts",
    "./modals": "./src/components/modals/index.ts",
    "./settings": "./src/components/settings/index.ts",
    "./trial": "./src/components/trial/index.ts",
    "./primitives": "./src/components/index.ts",
    "./utils": "./src/lib/utils.ts",
    "./hooks": "./src/hooks/index.ts",
    "./providers": "./src/providers/index.ts",
    "./contexts": "./src/contexts/index.ts",
    "./styles.css": "./src/styles.css",
    "./tailwind.config": {
      "import": "./tailwind.config.ts",
      "types": "./tailwind.config.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hookform/resolvers": "catalog:",
    "@paddle/paddle-js": "^1.4.2",
    "@radix-ui/react-accordion": "^1.2.4",
