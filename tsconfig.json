{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@indexnow/shared": ["packages/shared/src"],
      "@indexnow/ui": ["packages/ui/src"],
      "@indexnow/auth": ["packages/auth/src"],
      "@indexnow/database": ["packages/database/src"],
      "@indexnow/services": ["packages/services/src"],
      "@indexnow/mail": ["packages/mail/src"]
    },
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveWatchOutput": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"]
}
